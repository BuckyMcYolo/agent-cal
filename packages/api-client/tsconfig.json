{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@workspace/api/*": ["../../apps/api/src/app*"]
    }
  },
  "watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/apps/web",
      "**/docs",
      "**/packages/auth",
      "**/packages/db"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
