{
  "name": "booker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "studio": "pnpm --filter @workspace/db exec drizzle-kit studio",
    "docs:dev": "cd docs && mintlify dev --port 4000",
    "generate:better-auth": "cd packages/auth && npx @better-auth/cli@latest generate --output ../../../db/generated-schema.ts"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20.9.0 <21.0.0"
  }
}
